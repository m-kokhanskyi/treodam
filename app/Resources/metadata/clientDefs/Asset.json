                    "iconHtml": "<span class=\"fa fa-th\"></span>"
                }
            ]
        }
    },
    "iconClass": "fas fa-archive",
    "dynamicLogic": {
        "fields": {
            "type": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "size": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "file": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "and",
                            "value": [
                                {
                                    "type": "notEquals",
                                    "attribute": "type",
                                    "value": "Image"
                                },
                                {
                                    "type": "notEquals",
                                    "attribute": "type",
                                    "value": "Description Image"
                                },
                                {
                                    "type": "notEquals",
                                    "attribute": "type",
                                    "value": "Gallery Image"
                                },
                                {
                                    "type": "notEquals",
                                    "attribute": "type",
                                    "value": "Icon"
                                }
                            ]
                        }
                    ]
                }
            },
            "image": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "or",
                            "value": [
                                {
                                    "type": "equals",
                                    "attribute": "type",
                                    "value": "Image"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "type",
                                    "value": "Icon"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "type",
                                    "value": "Gallery Image"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "type",
                                    "value": "Description Image"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "relationshipPanels": {
        "assetCategories": {
            "selectBoolFilterList": [
                "onlyChildCategory",
                "notSelectCategories",
                "byCollection"
            ],
            "view": "dam:views/asset/record/panels/asset_category",
            "selectAction": "selectRelatedEntity"
        },
        "renditions": {
            "select": false
        },
        "assetMetaDatas": {
            "select": false,
            "create": false
        }
    }
}
