{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true,
            "isMultilang": true
        },
        "description": {
            "type": "text",
            "rows": 4,
            "lengthOfCut": 400,
            "isMultilang": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": true,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "private": {
            "notNull": true,
            "type": "bool",
            "default": false,
            "audited": false,
            "readOnly": false,
            "tooltip": false
        },
        "code": {
            "type": "varchar",
            "layoutMassUpdateDisabled": true,
            "required": true,
            "trim": true,
            "emHidden": true,
            "view": "dam:views/fields/code-from-name"
        },
        "type": {
            "type": "enum",
            "required": false,
            "fontSize": 1,
            "options": [
                "File",
                "PDF",
                "Image"
            ],
            "optionColors": {
                "File": "fff",
                "PDF": "fff",
                "Image": "fff"
            },
            "default": "File",
            "isSorted": false,
            "audited": false,
            "readOnly": false,
            "tooltip": false
        },
        "assetType": {
            "type": "enum",
            "required": false,
            "fontSize": 1,
            "options": [
                "master",
                "variation"
            ],
            "optionColors": {
                "master": "fff",
                "variation": "fff"
            },
            "default": "master",
            "isSorted": false,
            "audited": false,
            "readOnly": false,
            "tooltip": false
        },
        "fileType": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "readOnly": true,
            "audited": false,
            "tooltip": false
        },
        "size": {
            "type": "int",
            "required": false,
            "readOnly": true,
            "disableFormatting": false,
            "audited": false,
            "tooltip": false
        },
        "height": {
            "type": "int",
            "required": false,
            "readOnly": true,
            "disableFormatting": false,
            "audited": false,
            "tooltip": false
        },
        "width": {
            "type": "int",
            "required": false,
            "readOnly": true,
            "disableFormatting": false,
            "audited": false,
            "tooltip": false
        },
        "colorSpace": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "readOnly": true,
            "audited": false,
            "tooltip": false
        },
        "colorDepth": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "readOnly": true,
            "audited": false,
            "tooltip": false
        },
        "orientation": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "readOnly": true,
            "audited": false,
            "tooltip": false
        },
        "image": {
            "type": "image",
            "required": true,
            "previewSize": "small",
            "audited": false,
            "tooltip": false
        },
        "file": {
            "type": "file",
            "required": true,
            "sourceList": [],
            "audited": false,
            "tooltip": false
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam",
            "layoutRelationshipsDisabled": true
        },
        "image": {
            "type": "belongsTo",
            "entity": "Attachment",
            "skipOrmDefs": true
        },
        "file": {
            "type": "belongsTo",
            "entity": "Attachment",
            "skipOrmDefs": true
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        }
    }
}
