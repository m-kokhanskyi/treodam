{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": [
        "File",
        "Image"
      ],
      "default": "File"
    },
    "file": {
      "type": "file",
      "required": false,
      "sourceList": []
    },
    "alt": {
      "type": "varchar",
      "trim": true
    },
    "typeImage": {
      "type": "enum",
      "required": true,
      "options": [
        "File",
        "Link"
      ],
      "default": "File"
    },
    "fileImage": {
      "type": "image",
      "required": true,
      "previewSize": "small"
    },
    "linkImage": {
      "type": "url",
      "required": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "file": {
      "type": "belongsTo",
      "entity": "Attachment",
      "skipOrmDefs": true
    },
    "fileImage": {
      "type": "belongsTo",
      "entity": "Attachment",
      "skipOrmDefs": true
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    }
  }
}